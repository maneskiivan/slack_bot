						"text": {
							"type": "mrkdwn",
							"text": "Projector"
						},
						"value": "value-2"
					},
					{
						"text": {
							"type": "mrkdwn",
							"text": "Projector Screen"
						},
						"value": "value-3"
					},
					{
						"text": {
							"type": "mrkdwn",
							"text": "Microphone"
						},
						"value": "value-4"
					},
					{
						"text": {
							"type": "mrkdwn",
							"text": "Speaker"
						},
						"value": "value-5"
					}
				],
				"action_id": "checkboxes-action"
			}
		},
		{
			"type": "input",
			"element": {
				"type": "static_select",
				"placeholder": {
					"type": "plain_text",
					"text": "Select an item",
					"emoji": true
				},
				"options": [
					{
						"text": {
							"type": "plain_text",
							"text": "Yes",
							"emoji": true
