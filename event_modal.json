			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "Hardware needed"
			},
			"accessory": {
				"type": "checkboxes",
				"options": [
					{
						"text": {
							"type": "mrkdwn",
							"text": "Laptop"
						},
						"value": "value-0"
					},
					{
						"text": {
							"type": "mrkdwn",
							"text": "Webcam"
